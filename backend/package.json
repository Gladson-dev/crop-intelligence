{
  "name": "crop-intelligence-backend",
  "version": "1.0.0",
  "description": "Backend for Crop Intelligence application",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "set NODE_ENV=production&&node server.js",
    "dev": "set NODE_ENV=development&&nodemon --watch . --ext js --exec node server.js",
    "debug": "set NODE_ENV=development&&nodemon --inspect --watch . --ext js --exec node server.js",
    "test": "set NODE_ENV=test&&jest --detectOpenHandles --forceExit",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"**/*.js\"",
    "prepare": "husky install"
  },
  "keywords": [
    "node",
    "express",
    "mongodb",
    "rest",
    "api",
    "crop-intelligence"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.5",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
